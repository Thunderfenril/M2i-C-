<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MorpionVisuel.MainPage">

    <ScrollView>
        <Grid
            RowSpacing="0"
            ColumnSpacing="0"
            RowDefinitions="*,*,*"
            ColumnDefinitions="*, *, *">

            <Button
                Clicked="OnCounterClicked"
                Grid.Row="0"
                Grid.Column="0" />
            <Button
                Clicked="OnCounterClicked"
                Grid.Row="0"
                Grid.Column="1" />
            <Button
                Clicked="OnCounterClicked"
                Grid.Row="0"
                Grid.Column="2" />
            <Button
                Clicked="OnCounterClicked"
                Grid.Row="1"
                Grid.Column="0" />
            <Button
                Clicked="OnCounterClicked"
                Grid.Row="1"
                Grid.Column="1" />
            <Button
                Clicked="OnCounterClicked"
                Grid.Row="1"
                Grid.Column="2" />
            <Button
                Clicked="OnCounterClicked"
                Grid.Row="2"
                Grid.Column="0" />
            <Button
                Clicked="OnCounterClicked"
                Grid.Row="2"
                Grid.Column="1" />
            <Button
                Clicked="OnCounterClicked"
                Grid.Row="2"
                Grid.Column="2" />
        </Grid>
    </ScrollView>
</ContentPage>